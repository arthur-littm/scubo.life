<% if policy(item).can_upvote? %>
  <%= link_to item_upvotes_path(item), method: :post, class: 'btn btn-secondary' do %>
    <i class="fas fa-air-freshener"></i> <small><%= item.upvotes.count %></small>
  <% end %>
<% else %>
  <%= link_to upvote_path(item.upvotes.find_by(user: current_user)), method: :delete, class: 'btn btn-secondary btn-secondary-active' do %>
    <i class="fas fa-air-freshener"></i> <small><%= item.upvotes.count %></small>
  <% end %>
<% end %>
