<div class="d-md-flex justify-content-between  my-3">
  <%= cl_image_tag item.photo_key, class: "rounded img-fit mr-3 list-img mb-3 mb-md-0", alt: item.name %>
  <div class="flex-grow-1">
    <div class="d-flex align-items-start">
      <div class="flex-grow-1 flex-shrink-1">
        <p class="mb-2"><strong><%= item.name %></strong></p>
      </div>
      <div class="d-flex align-items-center">
        <% if policy(item).edit? %>

          <% if item.published && item.approved %>
            <%= link_to "Edit", edit_item_path(item), class: 'mr-2'  %>
            <%= link_to "Archive", update_published_item_path(item, published: false), method: :patch, class: 'btn btn-danger btn-sm'  %>
          <% elsif !item.published && item.approved %>
            <%= link_to "Restore", update_published_item_path(item, published: true), method: :patch, class: 'btn btn-secondary btn-sm'  %>
          <% else %>
            <span class="badge badge-secondary">Waiting for approval</span>
          <% end %>
        <% end %>

      </div>
    </div>
    <div class="small"><span class="text-muted">Category:</span> <span class="text-secondary"><%= item.category.emoji %> <%= item.category.name %></span></div>
    <div class="small"><span class="text-muted">Hashtag:</span> <span class="text-secondary"><%= item.hashtag.name %></span></div>
    <p class="mt-2"><%= item.description %></p>
  </div>
</div>
<hr>
