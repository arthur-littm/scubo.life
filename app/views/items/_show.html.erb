<div class="container-fluid">
  <div class="d-flex align-items-center justify-content-between">
    <div>
      <%= image_tag item.user.picture_url, class: "avatar-bordered mr-2" %>
      <span>By <strong><%= item.user.nickname %></strong> (<%= link_to pluralize(item.user.items.count, 'item'), "#" %>)</span>
    </div>

    <div>
      <!-- TODO: upvote -->
    </div>
  </div>

  <%= cl_image_tag item.photo_key, class: "w-100 rounded img-fit my-3", alt: item.name, height: 300, role: "button", data: { toggle: "modal", target: "#item#{ item.id }" } %>

  <div class="row">
    <div class="col">
      <div class="bg-light rounded p-3 mb-3">
        <p class="m-0"><strong><%= item.name %> <%= item.category.emoji %></strong></p>
        <span class="text-secondary small"><%= link_to item.hashtag.name, items_path(hashtag: item.hashtag) %></span>
      </div>
      <span class="text-muted">Who else thought this was fresh?</span>
      <hr>
      <div class="d-flex">
        <%= link_to "Save item", "#", class: "btn btn-secondary mr-2"  %>
        <% if policy(item).edit? %>
          <%= link_to "Edit", edit_item_path(item), class: 'btn btn-light small' %>
        <% end %>
      </div>
    </div>
    <div class="col">
      <!-- TODO: map -->
    </div>
  </div>
</div>





