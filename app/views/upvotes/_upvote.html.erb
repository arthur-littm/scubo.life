<% if policy(item).can_upvote? || !user_signed_in? %>
  <%= link_to item_upvotes_path(item), method: :post, class: 'btn btn-secondary', remote: true, data: { action: 'ajax:success->upvote#toggleUpvoted' } do %>
    <i class="fas fa-air-freshener"></i> <small><%= item.upvotes.count %></small>
  <% end %>
<% else %>
  <%= link_to upvote_path(item.upvotes.find_by(user: current_user)), method: :delete, class: 'btn btn-secondary btn-secondary-active', remote: true, data: { action: 'ajax:success->upvote#toggleUpvoted' } do %>
    <i class="fas fa-air-freshener"></i> <small><%= item.upvotes.count %></small>
  <% end %>
<% end %>
